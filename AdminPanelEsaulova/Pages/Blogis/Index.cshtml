@page
@model AdminPanelEsaulova.Pages.Blogis.IndexModel

<form method="post">
    @Html.DropDownListFor(n => n.themaID, new SelectList(Model.themaBlogas, "ID", "Name"), "Выбор темы")
    <label> @Model.themaID </label>
    <input type="submit" />
</form>
    



<table>
    <thead>
        <tr>
            <th colspan="3">Добавить новую статью</th>
            <th colspan="2"><a asp-page="Create">Новая статья в блог</a></th>
        </tr>
        <tr>
            <th style="width: 12%; text-align: center">Дата публикаии</th>
            <th style="width: 25%; text-align: center">Название</th>
            <th style="width: 50%; text-align: center">Краткое описание</th>
            <th style="width: 5%; text-align: center">Архив</th>
            <th style="width: 8%;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model.blogis)
        {
            <tr>
                <td style="">@blog.DataPublick.ToLongDateString()</td>
                <td style="padding: 10px;">@Html.DisplayFor(IndexModel => blog.HederText)</td>
                <td style="padding: 10px;">@Html.DisplayFor(IndexModel => blog.FillText)</td>
                <td style="padding: 10px;">@Html.DisplayFor(IndexModel => blog.NewsArhiv)</td>
                <td>
                    <form method="post">
                        <a asp-page="Edit" asp-route-id="@blog.ID">Изменить</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@blog.ID">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

</table>


