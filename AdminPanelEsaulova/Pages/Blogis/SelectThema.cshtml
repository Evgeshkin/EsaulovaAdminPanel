@page
@model AdminPanelEsaulova.Pages.Blogis.SelectThemaModel
@{
    ViewData["Title"] = "SelectThema";
}

<table>
    <thead>
        <tr>
            <th colspan="3">Добавить новую статью</th>
            <th colspan="2"><a asp-page="Create">Новая статья в блог</a></th>
        </tr>
        <tr>
            <th style="width: 80%; text-align: center">Темы в блоге</th>
            <th style="width: 8%;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model.themaBlogas)
        {
        <tr>
            <td style="">@blog.Name</td>
            <td>
                <form method="post">
                    <a asp-page="Edit" asp-route-id="@blog.ID">Изменить</a>
                    <button type="submit" asp-page-handler="delete" asp-route-id="@blog.ID">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
        }
    </tbody>

</table>

