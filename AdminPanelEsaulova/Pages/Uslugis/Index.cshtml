@page
@model AdminPanelEsaulova.Pages.Uslugis.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Панель управления услугами</h2>

<table class="table">
    <thead>
        <tr>
            <th colspan="3">
            </th>
        </tr>
        <tr>
            <th colspan="2">
            </th>
            <th style="width:20%;"><p><a asp-page="Create">Добавить услугу</a></p></th>
        </tr>
        <tr><th>Название</th><th>Описание</th></tr>
    </thead>
    <tbody>
        @foreach (var usluga in Model.UslugiDTs)
        {
            <tr>
                <td>@Html.DisplayFor(IndexModel => usluga.Name)</td>
                <td>@Html.DisplayFor(IndexModel => usluga.Opisanie)</td>
                <td>
                    <form method="post">
                        <a asp-page="Edit" asp-route-id="@usluga.ID">Изменить</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@usluga.ID">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

